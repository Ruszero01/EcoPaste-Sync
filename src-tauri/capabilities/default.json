{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the all window",
	"windows": ["*"],
	"permissions": [
		"core:default",
		"core:window:allow-center",
		"core:window:allow-set-title",
		"core:window:allow-set-position",
		"core:window:allow-start-dragging",
		"core:window:allow-set-theme",
		"core:window:deny-internal-toggle-maximize",
		"core:window:allow-set-size",
		"core:window:allow-set-focus",
		{
			"identifier": "shell:allow-execute",
			"allow": [
				{
					"args": true,
					"name": "bin/ocr",
					"sidecar": true
				}
			]
		},
		"fs:read-all",
		"fs:write-all",
		{
			"identifier": "fs:scope",
			"allow": ["**/*"]
		},
		"autostart:default",
		"log:default",
		"sql:default",
		"sql:allow-execute",
		"global-shortcut:allow-is-registered",
		"global-shortcut:allow-register",
		"global-shortcut:allow-unregister",
		"os:default",
		"dialog:default",
		"updater:default",
		"process:default",
		"drag:default",
		"macos-permissions:default",
		"fs-pro:default",
		"locale:default",
		"opener:default",
		{
			"identifier": "opener:allow-open-path",
			"allow": [
				{
					"path": "**/*"
				}
			]
		},
		"eco-window:default",
		"eco-clipboard:default",
		"eco-ocr:default",
		"eco-paste:default",
		"eco-autostart:default",
		"eco-webdav:default",
		{
			"identifier": "eco-auto-sync:allow-start-auto-sync",
			"allow": [
				{
					"args": [
						{
							"name": "interval_hours",
							"type": "number"
						}
					],
					"cmd": "start_auto_sync"
				}
			]
		},
		{
			"identifier": "eco-auto-sync:allow-stop-auto-sync",
			"allow": [
				{
					"cmd": "stop_auto_sync"
				}
			]
		},
		{
			"identifier": "eco-auto-sync:allow-get-auto-sync-status",
			"allow": [
				{
					"cmd": "get_auto_sync_status"
				}
			]
		},
		{
			"identifier": "eco-auto-sync:allow-update-sync-interval",
			"allow": [
				{
					"args": [
						{
							"name": "interval_hours",
							"type": "number"
						}
					],
					"cmd": "update_sync_interval"
				}
			]
		},
		{
			"identifier": "eco-webdav:allow-upload-sync-data",
			"allow": [
				{
					"cmd": "upload_sync_data"
				}
			]
		},
		{
			"identifier": "eco-webdav:allow-download-sync-data",
			"allow": [
				{
					"cmd": "download_sync_data"
				}
			]
		},
		{
			"identifier": "eco-webdav:allow-delete-file",
			"allow": [
				{
					"cmd": "delete_file"
				}
			]
		},
		{
			"identifier": "eco-webdav:allow-upload-file",
			"allow": [
				{
					"cmd": "upload_file"
				}
			]
		},
		{
			"identifier": "eco-webdav:allow-download-file",
			"allow": [
				{
					"cmd": "download_file"
				}
			]
		}
	]
}
