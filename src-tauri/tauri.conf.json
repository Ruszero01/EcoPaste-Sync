{
	"$schema": "https://schema.tauri.app/config/2.0.0",
	"productName": "EcoPaste-Sync",
	"mainBinaryName": "EcoPaste-Sync",
	"version": "../package.json",
	"identifier": "com.Rains.EcoPaste-Sync",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:3000",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"security": {
			"csp": null,
			"dangerousDisableAssetCspModification": true,
			"assetProtocol": {
				"enable": true,
				"scope": {
					"allow": ["**/*"],
					"requireLiteralLeadingDot": false
				}
			}
		}
	},
	"bundle": {
		"active": true,
		"createUpdaterArtifacts": true,
		"targets": ["nsis", "dmg", "app", "appimage", "deb", "rpm"],
		"shortDescription": "EcoPaste-Sync",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"resources": ["assets/tray.ico", "assets/drag-icon.png"]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcwNEIyQkUwRjNEMTg4NgpSV1NHR0QwUHZySUVCeXFRQzZ4aEpNRWdFdThVQ2I4b2dSQktRcmNtV1dYTFJJV1h2VmVVZXBWSgo=",
			"endpoints": ["https://api.ecopaste.cn/update"]
		},
		"fs": {
			"requireLiteralLeadingDot": false
		},
		"eco-window": {
			"allow": [
				"allow-show-window",
				"allow-show-window-with-position",
				"allow-destroy-window",
				"allow-destroy-all-windows",
				"allow-exit-app",
				"allow-show-taskbar-icon",
				"allow-show-main-window",
				"allow-show-preference-window",
				"allow-apply-mica-effect",
				"allow-clear-mica-effect",
				"allow-is-mica-supported",
				"allow-create-window",
				"allow-close-webview-for-test"
			]
		}
	}
}
